<h2>Add course</h2>

<form action="/add" method="POST">
    <div class="input-field">
          <input name="name"  id="title" type="text" class="validate" required>
          <label for="title">Course name</label>
          <span class="helper-text" data-error="Type course name"></span>
    </div>

    <div class="input-field">
          <input name="price" id="price" type="number" class="validate" required min="1">
          <label for="price">Course price</label>
          <span class="helper-text" data-error="Type course price"></span>
    </div>

    <div class="input-field">
          <input name="img"  id="img" type="text" class="validate" required>
          <label for="img">Type course img url</label>
          <span class="helper-text" data-error="Type course img url" ></span>
    </div>

    <input name="_csrf" type="hidden" value="{{csrf}}">

    <button type="submit" class="btn btn-primary">Create new Course</button>
</form>

